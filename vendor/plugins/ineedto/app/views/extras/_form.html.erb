<% form_for @extra do |f| %>
  <%= f.error_messages %>
  Select an existing Verb OR enter a new Verb in the box below.<br />
  Please try to use one of the existing Verbs unless none applies at all.<br />
  <div id="verb" style="width: 330px; float: left;">
    Verb is: <%= @verb.phrase %>
  </div>
  <div id="noun"  style="width: 330px; float: left;">
    Noun: <%= @noun.phrase %>
  </div>
  <div class="clear"></div><br />
  <hr />


  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <div style="margin-top: 10px;">
    <div>
      <%= f.label :extra_information_needed %><br />
      <%= f.text_area :detail, :class => "wysiwyg" %>
    </div>
  </div>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <%= f.submit "Save", :class => "submit" %>
<% end %>
