<% form_for @solution do |f| %>
  <%= f.error_messages %>
  <% fields_for :x do |i| %>
    Select an existing Verb OR enter a new Verb in the box below.<br />
    Please try to use one of the existing Verbs unless none applies at all.<br />
    <div id="verb" style="width: 330px; float: left;">
      <%= i.label :verb,  "Verb" %><br />
      <%= i.select :verb, @verbs_selection, {:include_blank => true}, :class => "styled" %><br />
    </div>
    <div id="noun"  style="width: 330px; float: left;">
      <%= i.label :noun,  "Noun" %><br />
      <%= i.select :noun, ["a", "a"], {:include_blank => true}, :class => "styled" %><br />
      <%= i.text_field :noun_write_in %>
    </div>
    <div id="extra"  style="width: 330px; float: left;">
      <%= i.label :extra,  "Extra Information" %><br />
      <%= i.select :extra, ["b", "b"], {:include_blank => true}, :class => "styled" %><br />
      <%= i.text_field :extra_write_in %>
    </div>
    <div class="clear"></div><br />    <div id="solutions" style="display:none;">
      <h3>Solutions go here:</h3>
    </div>
  <% end %>
  <div class="clear"></div><br /><hr />
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <div style="margin-top: 10px;">
    <div>
      <%= f.label :solution_detail %><br />
      <%= f.text_area :detail, :class => "wysiwyg" %>
    </div>
  </div>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <%= f.submit "Save", :class => "submit" %>
<% end %>
